{
  "expo": {
    "name": "Firehouse Fit",
    "slug": "firehouse-fit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.firehousefit.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan and analyze your meals for nutritional information.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to let you select meal photos for analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.firehousefit.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Firehouse Fit to access your camera to scan meals."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Firehouse Fit to access your photos to select meal images."
        }
      ]
    ],
    "scheme": "firehousefit"
  }
}
